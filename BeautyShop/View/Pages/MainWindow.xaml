<Window x:Class="BeautyShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautyShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1100" MinHeight="400" MinWidth="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*" MinHeight="60" MaxHeight="90"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#FFE1E4FF" Orientation="Horizontal" Width="Auto">
            <Image Source="/Resources/beauty_logo.png"
                   Width="Auto" HorizontalAlignment="Left"/>
        </StackPanel>
        <TextBlock Text="Магазин &quot;Красавицы&quot;"
                   Style="{StaticResource productListTxtb}"
                   FontSize="45"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="15"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" >
            <Image Source="/Resources/beauty_logo.png" 
                   Width="500" Opacity=".1"/>
        </StackPanel>
        <Frame x:Name="mainFrm" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
